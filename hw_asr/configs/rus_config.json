{
    "name": "default_config",
    "n_gpu": 1,
    "language": "ru",
    "preprocessing": {
        "sr": 16000,
        "spectrogram": {
            "type": "MelSpectrogram",
            "args": {}
        }
    },
    "augmentations": {
        "wave": [],
        "spectrogram": []
    },
    "arch": {
        "type": "CRNNModel",
        "args": {
            "n_feats": 128,
            "n_cnn": 3,
            "n_rnn": 5,
            "hidden_size": 512
        }
    },
    "data": {
        "train": {
            "batch_size": 20,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "RussianDataset",
                    "args": {
                        "part": "train-rus",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                }
            ]
        },
        "val": {
            "batch_size": 20,
            "num_workers": 5,
            "datasets": [
                {
                    "type": "RussianDataset",
                    "args": {
                        "part": "test-rus",
                        "max_audio_length": 20.0,
                        "max_text_length": 200
                    }
                }
            ]
        }
    },
    "optimizer": {
        "type": "AdamW",
        "args": {
            "lr": 0.0005
        }
    },
    "loss": {
        "type": "CTCLoss",
        "args": {}
    },
    "metrics": [
        {
            "type": "ArgmaxWERMetric",
            "args": {
                "name": "WER (argmax)"
            }
        },
        {
            "type": "ArgmaxCERMetric",
            "args": {
                "name": "CER (argmax)"
            }
        }
    ],
    "lr_scheduler": {
        "type": "OneCycleLR",
        "args": {
            "steps_per_epoch": 500,
            "epochs": 10,
            "anneal_strategy": "linear",
            "max_lr": 0.0005
        }
    },
    "trainer": {
        "epochs": 10,
        "save_dir": "saved/",
        "save_period": 10,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 100,
        "visualize": "wandb",
        "wandb_project": "dla_hw1_1_rus",
        "grad_norm_clip": 10,
        "len_epoch": 500
    }
}