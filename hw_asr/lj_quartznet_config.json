{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {}
      },
      {
        "type": "Noise",
        "args": {}
      },
      {
        "type": "Pitch",
        "args": {}
      },
      {
        "type": "Stretch",
        "args": {}
      }
    ],
    "spectrogram": [
      {
        "type": "SpecAug",
        "args": {
          "freq_mask": 15,
          "time_mask": 80,
          "repeat": 2
        }
      }]
  },
  "arch": {
    "type": "QuartzNetModel",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LJDataset",
          "args": {
            "part": "test",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4,
      "weight_decay": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 66,
      "epochs": 50,
      "anneal_strategy": "cos",
      "max_lr": 1e-1,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla_hw1_1_quartz_lj",
    "grad_norm_clip": 10
  }
}
