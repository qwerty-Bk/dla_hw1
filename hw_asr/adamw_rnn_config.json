{
  "name": "default_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "Gain",
        "args": {}
      },
      {
        "type": "Noise",
        "args": {}
      },
      {
        "type": "Pitch",
        "args": {}
      },
      {
        "type": "Stretch",
        "args": {}
      }
    ],
    "spectrogram": [
      {
        "type": "SpecAug",
        "args": {
          "freq_mask": 20,
          "time_mask": 100
        }
      }]
  },
  "arch": {
    "type": "RnnModel",
    "args": {
      "n_feats": 128,
      "layer_dim": 2,
      "fc_hidden": 512
    }
  },
  "data": {
    "train": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "val": {
      "batch_size": 20,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "AdamW",
    "args": {
      "lr": 3e-4,
      "weight_decay": 1e-3
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "CosineAnnealingLR",
      "args": {
      "T_max": 50,
      "eta_min": 0,
      "last_epoch": -1
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 10,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "dla_hw1_1_rnn_v2",
    "len_epoch": 500,
    "grad_norm_clip": 10
  }
}
